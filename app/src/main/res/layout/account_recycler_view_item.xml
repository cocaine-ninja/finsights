<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:layout_height="160dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/dividerHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="103dp"
            android:layout_marginTop="74dp"
            android:background="?android:attr/listDivider" />

        <View
            android:id="@+id/dividerVertical"
            android:layout_width="2dp"
            android:layout_height="150dp"
            android:layout_marginStart="100dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/accountTypeTextView"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp" />

        <TextView
            android:id="@+id/accountBalanceHeadingTextView"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="103dp"
            android:layout_marginTop="10dp"
            android:text="Account Balance"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/accountBalanceTextView"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="103dp"
            android:layout_marginTop="35dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/accountExpenditureHeadingTextView"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="103dp"
            android:layout_marginTop="85dp"
            android:text="Expenditure"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/accountExpenditureTextView"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="103dp"
            android:layout_marginTop="110dp"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="71dp"
            android:layout_height="68dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="#00FF0000"
            android:backgroundTint="#FF0000" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>